---
import type { HTMLAttributes } from "astro/types";

import { alertDialogTitleVariant } from "./variants";

type Props = Omit<HTMLAttributes<"h2">, "id"> & {
  /**
   * The content to be rendered inside the alert dialog title
   */
  children?: any;
};

const { class: className, ...rest } = Astro.props as Props;
---

<h2 class={alertDialogTitleVariant({ class: className })} {...rest}>
  <slot />
</h2>
