---
import type { HTMLAttributes } from "astro/types";

type Props = HTMLAttributes<"button"> & {
  /**
   * When true, the component will render its child element instead of a button
   */
  asChild?: boolean;
};

const { class: className, asChild = false, ...rest } = Astro.props;

// Get the first child element if asChild is true
let hasChildren = false;
if (Astro.slots.has("default")) {
  hasChildren = true;
}
---

{
  asChild && hasChildren ? (
    <div class:list={["starwind-alert-dialog-action", className]} data-as-child {...rest}>
      <slot />
    </div>
  ) : (
    <button type="button" class:list={["starwind-alert-dialog-action", className]} {...rest}>
      <slot>Continue</slot>
    </button>
  )
}