---
import type { HTMLAttributes } from "astro/types";
import { accordionItemVariants } from "./variants";


type Props = HTMLAttributes<"div"> & {
  /**
   * The value of the item
   */
  value: string;
};

const { value, class: className, ...rest } = Astro.props;
---

<div class={accordionItemVariants({ class: className })} data-value={value} data-state="closed" {...rest}>
  <slot />
</div>
