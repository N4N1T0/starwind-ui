---
import ChevronDown from "@tabler/icons/outline/chevron-down.svg";
import type { HTMLAttributes } from "astro/types";
import { accordionTriggerVariants } from "./variants";


type Props = HTMLAttributes<"button">;

const { class: className, ...rest } = Astro.props;
---

<button
    type="button"
  class={accordionTriggerVariants({ class: className })}
  aria-expanded="false"
  {...rest}
>
  <slot />
  <ChevronDown class="size-5 shrink-0 transition-transform duration-200" />
</button>
